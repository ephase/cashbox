{% extends 'base_admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12 m3">
                <div class="row flex flex-center extensive-h">
                    <a href="{{ path('category_new') }}" class="btn cyan">Ajouter</a>
                </div>
            </div>
            <div class="col s12 m9">
                <h1>Vos catégories</h1>

                <table class="table striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Couleur</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>{{ category.color }} <i class="material-icons tiny left {{ category.color }}-text">brightness_1</i></td>
                            <td>
                                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn-floating teal"><i class="material-icons">edit</i></a>
                            </td>
                            <td>
                                {{ include('category/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucune catégorie</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
