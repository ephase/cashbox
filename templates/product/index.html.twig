{% extends 'base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12 m3">
            <div class="row flex flex-center extensive-h">
                <a href="{{ path('product_new') }}" class="btn-large cyan"><i class="material-icons left">add</i> Ajouter</a>
            </div>
        </div>
        <div class="col s12 m9">
        <h1>Gérer vos produits</h1>
        <table class="table">
            <thead>
                <tr class="bolder">
                    <th>Produit</th>
                    <th>Stock</th>
                    <th></th>
                    <th>Prix</th>
                    <th>Catégorie</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr class="">
                    <td class="bolder {{ product.category.color }}-text">{{ product.name }}</td>
                    <td>{% if product.stock %}{{ product.stock.quantity }}{% endif %}</td>
                    <td></td>
                    <td>{{ product.price }}€</td>
                    <td>{{ product.category.name }}</td>
                    <td>
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn-floating cyan">
                            <i class="material-icons">edit</i>
                        </a>
                    </td>
                    <td>
                        {{ include('product/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun produit enregistré</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
</div>

{% endblock %}
