{% extends 'base_admin.html.twig' %}


{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12 m3">
            <div class="row flex flex-center extensive-h">
                <a href="{{ path('user_new') }}" class="btn btn-large cyan"><i class="material-icons left">add</i> Ajouter</a>
            </div>
        </div>
        <div class="col s12 m9">
            <h1>Utilisateurs</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Identifiant</th>
                        <th>Roles</th>
                        <th>Pr√©nom</th>
                        <th>Nom</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn-floating cyan"><i class="material-icons">edit</i></a>
                        </td>
                        <td>
                            {% if user.username != 'admin' %}
                            {{ include('user/_delete_form.html.twig') }}
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
