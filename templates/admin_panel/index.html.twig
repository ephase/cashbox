{% extends 'base.html.twig' %}

{% block title %}Admin CashBox{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Gérer votre caisse</h1>
        </div>
        <div class="row">
            {% include 'admin_panel/_admin_navbar.html.twig' %}
        </div>
        <div class="row">

            <div class="col s12 m6">
                <div class="row">
                    Total du jour : {{ total_today}} €
                </div>
                <div class="row">
                    <table>
                        <thead>
                            <tr>
                                <td>
                                    Date et heure
                                </td>
                                <td>
                                    Moyen de paiement
                                </td>
                                <td>
                                    Montant
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for purchase in purchases %}
                                <tr>
                                    <td>
                                        {{ purchase.createdAt|dateName }} à {{ purchase.createdAt|timeFormat }}
                                    </td>
                                    <td>
                                        {{ purchase.paymentMode.name }}
                                    </td>
                                    <td>
                                        {{ purchase.totalAmount }} €
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
